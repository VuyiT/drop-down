{
  "name": "drop-down",
  "version": "1.0.0",
  "description": "Drop down Module",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "predev": "npm run lint",
    "dev": "webpack serve --open --config webpack.dev.js",
    "change": "git checkout gh-pages && git merge main --no-edit",
    "predeploy": "git add dist -f && git commit -m 'Deployment commit'",
    "deploy": "git subtree push --prefix dist origin gh-pages",
    "postdeploy": "git checkout main",
    "lint": "eslint .",
    "format": "prettier --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VuyiT/drop-down.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VuyiT/drop-down/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format" 
    }
  },
  "homepage": "https://github.com/VuyiT/drop-down#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "prettier": "3.6.2",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  }
}
